<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fabParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="0dp"
        fab:fab_addButtonColorNormal="@color/colorPrimary"
        fab:fab_addButtonColorPressed="@color/colorPrimaryPress"
        fab:fab_addButtonPlusIconColor="@color/colorWhite"
        fab:fab_addButtonSize="normal"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_labelsPosition="left"
        fab:layout_constraintBottom_toBottomOf="parent"
        fab:layout_constraintHorizontal_bias="1.0"
        fab:layout_constraintLeft_toLeftOf="parent"
        fab:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <!--<com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSanCuaToi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2.8dp"
            android:src="@drawable/ic_pitch_image"
            fab:fab_colorNormal="@color/colorRed"
            fab:fab_colorPressed="@color/colorRedPress"
            fab:fab_size="mini"
            fab:fab_title="Sân của tôi" />-->

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSanCuaToi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2.8dp"
            android:src="@drawable/ic_pitch_image"
            fab:fab_colorNormal="@color/colorYellow"
            fab:fab_colorPressed="@color/colorYellowPress"
            fab:fab_size="mini"
            fab:fab_title="Sân của tôi" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabQuanhDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2.8dp"
            android:src="@drawable/ic_location"
            fab:fab_colorNormal="@color/colorBlue"
            fab:fab_colorPressed="@color/colorBluePress"
            fab:fab_size="mini"
            fab:fab_title="Tìm quanh đây" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabTimSanTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2.8dp"
            android:src="@drawable/ic_search_image"
            fab:fab_colorNormal="@color/colorXanhNhat"
            fab:fab_colorPressed="@color/colorXanhNhatPress"
            fab:fab_size="mini"
            fab:fab_title="Tìm sân" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>